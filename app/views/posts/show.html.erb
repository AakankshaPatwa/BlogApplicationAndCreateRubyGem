<p style="color: green"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1><%= @post.title %></h1>
      <p class="lead">Posted on <%= @post.created_at.strftime("%B %d, %Y") %></p>
      <div class="content">
        <%= raw @post.content %>  </div>
      <div class="actions mt-3">  <%= link_to "Edit this post", edit_post_path(@post), class: "btn btn-primary" %> |
        <%= link_to "Back to posts", posts_path, class: "btn btn-secondary mr-2" %>  
        <%= button_to "Destroy this post", @post, method: :delete, class: "btn btn-danger mr-5", data: { confirm: "Are you sure you want to delete this post?" } %>
      </div>
    </div>
  </div>
</div>


